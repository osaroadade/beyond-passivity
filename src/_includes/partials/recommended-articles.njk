 <!-- Start More Stories Area  -->
<div class="axil-more-stories-area axil-section-gap bg-color-grey">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2 class="title">More Articles</h2>
                </div>
            </div>
        </div>
        <div class="row">
            {% for item in recommendedPosts %}
                <!-- Start Stories Post  -->
                <div class="col-lg-3 col-md-6 col-sm-6 col-12">
                    <!-- Start Post List  -->
                    <div class="post-stories content-block mt--30">
                        <div class="post-thumbnail">
                            <a href="{{ item.url }}">
                                <img src="{{ item.data.image }}" alt="{{ item.data.imageAlt }}">
                            </a>
                        </div>
                        <div class="post-content">
                            {% if item.data.tags %}
                                <div class="post-cat">
                                    <div class="post-cat-list">
                                        {% for tag in item.data.tags %}
                                            <a href="/tag/{{ tag | slug }}/">{{ tag | title | upper }}</a>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% endif %}
                            <h5 class="title">
                                <a href="{{ item.url }}">{{ item.data.title }}</a>
                            </h5>
                        </div>
                    </div>
                    <!-- End Post List  -->
                </div>
                <!-- Start Stories Post  -->
            {% endfor %}
        </div>
    </div>
</div>
<!-- End More Stories Area  -->