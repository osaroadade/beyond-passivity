<!-- Start Post List Wrapper  -->
<div class="axil-post-list-area axil-section-gap bg-color-white">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-8">
                {% for item in postListItems %}
                    {% if loop.first %}
                        <!-- Start Post List  -->
                        <div class="content-block post-list-view sticky mt--30">
                            <div class="post-content">
                                {% if item.data.tags %}
                                    <div class="post-cat">
                                        <div class="post-cat-list">
                                            {% for tag in item.data.tags %}
                                                <a class="hover-flip-item-wrapper" href="/tag/{{ tag | slug }}/">
                                                    <span class="hover-flip-item">
                                                        <span data-text="{{ tag | title | upper }}">{{ tag | title | upper }}</span>
                                                    </span>
                                                </a>
                                            {% endfor %}
                                        </div>
                                    </div>
                                {% endif %}
                                <h4 class="title"><a href=" {{ item.url }}">{{ item.data.title }}</a></h4>
                                <div class="post-meta-wrapper">
                                    <div class="post-meta">
                                        <div class="content">
                                            <h6 class="post-author-name">
                                                <a class="hover-flip-item-wrapper" href="#">
                                                    <span class="hover-flip-item">
                                                        <span data-text="{{ item.data.author }}">{{ item.data.author }}</span>
                                                    </span>
                                                </a>
                                            </h6>
                                            <ul class="post-meta-list">
                                                <li>{{ item.data.date | postDate }}</li>
                                            </ul>
                                        </div>
                                    </div>
                                    <ul class="social-share-transparent justify-content-end">
                                        <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                                        <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                                        <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                                        <li><a href="#"><i class="fas fa-link"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <!-- End Post List  -->
                    {% else %}
                        <!-- Start Post List  -->
                        <div class="content-block post-list-view mt--30">
                            <div class="post-thumbnail">
                                <a href="{{ item.url }}">
                                    <img src="{{ item.data.image }}" alt="{{ item.data.imageAlt }}">
                                </a>
                            </div>
                            <div class="post-content">
                                {% if item.data.tags %}
                                    <div class="post-cat">
                                        <div class="post-cat-list">
                                            {% for tag in item.data.tags %}
                                                <a class="hover-flip-item-wrapper" href="/tag/{{ tag | slug }}/">
                                                    <span class="hover-flip-item">
                                                        <span data-text="{{ tag | title | upper }}">{{ tag | title | upper }}</span>
                                                    </span>
                                                </a>
                                            {% endfor %}
                                        </div>
                                    </div>
                                {% endif %}
                                <h4 class="title"><a href=" {{ item.url }}">{{ item.data.title }}</a></h4>
                                <div class="post-meta-wrapper">
                                    <div class="post-meta">
                                        <div class="content">
                                            <h6 class="post-author-name">
                                                <a class="hover-flip-item-wrapper" href="#">
                                                    <span class="hover-flip-item">
                                                        <span data-text="{{ item.data.author }}">{{ item.data.author }}</span>
                                                    </span>
                                                </a>
                                            </h6>
                                            <ul class="post-meta-list">
                                                <li>{{ item.data.date | postDate }}</li>
                                                {# <li>3 min read</li> #}
                                            </ul>
                                        </div>
                                    </div>
                                    <ul class="social-share-transparent justify-content-end">
                                        <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                                        <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                                        <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                                        <li><a href="#"><i class="fas fa-link"></i></a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <!-- End Post List  -->
                    {% endif %}
                {% endfor %}
                {% if not tag %}
                    {% include "partials/pagination.njk" %}
                {% endif %}
            </div>
        </div>
    </div>
</div>
<!-- End Post List Wrapper  -->